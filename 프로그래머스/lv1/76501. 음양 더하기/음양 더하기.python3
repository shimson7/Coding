def solution(absolutes, signs):
    for i in range(len(signs)):
        if signs[i] == True:
            absolutes[i] *= 1
        elif signs[i] == False:
            absolutes[i] *= -1
    answer = sum(absolutes)
    
    return answer

solution([4,7,12], [True,False,True])
solution([1,2,3], [False,False,True])